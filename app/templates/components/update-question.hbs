<div class="container">

  {{#if updateQuestionForm}}

    <h4> Update {{question.author}}'s {{question.question}} </h4>

    <div>

      <form>

        <div class="form-group">
          {{textarea value=question id="question" placeholder=question.question}}
        </div>

        <div class="form-group">
          {{input value=author id="author" placeholder="User Name"}}
        </div>

        <button {{action 'update' question}}> Save </button>

      </form>

    </div>

   {{else}}

    <button {{action 'updateQuestionForm'}}> UPDATE </button>

  {{/if}}

</div>
